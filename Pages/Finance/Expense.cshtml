@page
@model DairyFarm.Pages.Finance.ExpenseModel
@{
}
<div class="expense-page">
    <header class="page-header">
        <h1>Expenses</h1>
    </header>

    <div class="filter-section">
        <form>
            <select class="filter-dropdown" asp-for="@Model.filterQuery">
                <option value="">All Time</option>
                <option value="Y">This Year</option>
                <option value="M">This Month</option>
                <option value="T">Today</option>
            </select>
            <button class="filter-button" type="submit">Filter</button>
        </form>
    </div>

    <div class="expense-cards">
        <div class="card total-expense">
            <h3>Total Expenses</h3>
            <p>@Model.TotalExpense</p>
        </div>
        <div class="card food-expense">
            <h3>Food Expense</h3>
            <p>@Model.FoodExpense</p>
        </div>
        <div class="card other-expense">
            <h3>Other Expenses</h3>
            <p>@Model.OtherExpenses</p>
        </div>
    </div>
</div>

<style>
    .expense-page {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        color: #000000;
        padding: 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #0066cc; 
    }

   
    .filter-section {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 30px;
    }

    .filter-dropdown {
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #0066cc;
        border-radius: 5px;
        color: #0066cc;
        margin-right: 10px;
        background-color: #ffffff;
    }

    .filter-button {
        background-color: #28a745; 
        color: #ffffff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
    }

    .filter-button:hover {
        background-color: #218838;
    }

    .expense-cards {
        display: flex;
        justify-content: space-evenly;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        flex: 1 1 calc(30% - 20px);
        border: 2px solid #0066cc; 
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .card h3 {
        margin-bottom: 10px;
        font-size: 1.5rem;
    }

    .card p {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .total-expense {
        border-color: #0066cc; 
    }

    .food-expense {
        border-color: #28a745; /* Green */
    }

    .other-expense {
        border-color: #ffc107; 
    }

    .total-expense h3 {
        color: #0066cc;
    }

    .food-expense h3 {
        color: #28a745;
    }

    .other-expense h3 {
        color: #ffc107;
    }
</style>
