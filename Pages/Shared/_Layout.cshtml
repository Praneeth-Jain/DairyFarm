<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dairy Management</title>

    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <style>
    html {
    font-size: 14px;
    position: relative;
    min-height: 100%;
}

body {
    margin: 0;
    padding: 0;
    background-color: #f7f7f7;
    font-family: 'Arial', sans-serif;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overflow-x: hidden;
}

.top-bar {
    background-color: #4CAF50;
    color: white;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 1000;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.top-bar a {
    color: white;
    font-size: 14px;
    text-decoration: none;
    padding: 8px 20px;
    border-radius: 5px;
}

.top-bar a:hover {
    background-color: #43A047;
}

.toggle-btn {
    background: none;
    border: none;
    color: white;
    font-size: 24px;
    cursor: pointer;
}

.left-nav {
    background-color: #FFFFFF;
    color: #333;
    width: 250px;
    height: 100vh;
    position: fixed;
    top: 70px; /* Adjusted to avoid overlap with the top-bar */
    left: -250px;
    transition: left 0.3s ease-in-out;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    overflow-y: auto;
    z-index: 999;
}

.left-nav.active {
    left: 0;
}

.nav-link {
    color: #4CAF50;
    font-weight: bold;
    padding: 10px 20px;
    display: block;
}

.nav-link:hover {
    color: #155d27;
    background-color: #f1f1f1;
}

.content {
    margin-left: 0;
    padding: 20px;
    transition: margin-left 0.3s ease-in-out;
    margin-top: 70px;
    min-height: calc(100vh - 70px); /* Adjusted height for content */
    padding-top: 10px;
}

.content.shift {
    margin-left: 250px;
}

.section-header {
    color: #4CAF50;
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.info-box {
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    text-align: center;
    margin-bottom: 20px;
}

.btn-success {
    background-color: #4CAF50;
    border: none;
}

.btn-success:hover {
    background-color: #43A047;
}

.btn-outline-light {
    border-color: white;
    color: white;
}

.btn-outline-light:hover {
    background-color: white;
    color: #4CAF50;
}


html, body {
    height: 100%;
}


.nav-link.active {
    background-color: #d3ffd7;
    color: #4CAF50;
}

    </style>
</head>
<body>
    <div class="container">
        <div class="top-bar">
            <div class="d-flex">
            <button class="toggle-btn" id="toggleNavBtn">☰</button>
         
            </div>
            <div>
                <a asp-page="/Subscription/Index" class="btn btn-success me-2">Buy Premium</a>
                @{
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="/OwnerLogout" class="btn btn-success me-2">LogOut</a>
                    }
                    else
                    {
                        <a asp-page="/OwnerLogin" class="btn btn-success me-2">Login</a>
                    }
                    }
                <a href="/profile" class="btn btn-outline-light">Profile</a>
            </div>
        </div>

        <div class="row">
            <nav class="left-nav col-3" id="sideNav">
                @await Component.InvokeAsync("Menu")
            </nav>

            <div class="content col" id="mainContent">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script>
   (function () {
        const toggleNavBtn = document.getElementById('toggleNavBtn');
        const sideNav = document.getElementById('sideNav');
        const mainContent = document.getElementById('mainContent');

        toggleNavBtn.addEventListener('click', () => {
            sideNav.classList.toggle('active');
            mainContent.classList.toggle('shift');
        });
    })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>

