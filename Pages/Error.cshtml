@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<style>
    .error-section {
        font-family: 'Arial', sans-serif;
        background-color: #f0fdf4;
        color: #1f2937;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .error-container {
        text-align: center;
        padding: 20px;
        border: 2px solid #34d399;
        border-radius: 10px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
      
    }

    .cow-icon {
        font-size: 6rem;
        margin-bottom: 10px;
    }

    h1 {
        font-size: 2rem;
        color: #10b981;
        margin-bottom: 10px;
    }

    p {
        font-size: 1rem;
        margin: 5px 0;
    }

    .pun {
        font-style: italic;
        color: #6b7280;
    }

    .back-home-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #34d399;
        color: #ffffff;
        text-decoration: none;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

        .back-home-button:hover {
            background-color: #059669;
        }

</style>
<section class="error-section">
<div class="error-container">
    <div class="cow-icon">
        🐄
    </div>
    <h1>You're Udderly Lost!</h1>
    <p>
        Oops! Looks like you've wandered off the pasture.
        We can't find the page you're looking for.
    </p>
    <p class="pun">Don't worry, it's no cow-tastrophe! 🐮</p>
    <a asp-page="/Index" class="back-home-button">Back to Home</a>
</div>
</section>