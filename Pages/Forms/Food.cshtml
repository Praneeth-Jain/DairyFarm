@page
@model DairyFarm.Pages.Forms.FoodModel
@{
}

<div>
    <h1>
        Food
    </h1>
</div>



<form method="post">
    <div class="form-group">
        <label asp-for="food.Name" class="control-label">Food Name :</label>
        <input asp-for="food.Name" class=" form-control" placeholder="Enter food name" />
        <span asp-validation-for="food.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="food.PricePerUnit" class="control-label">Amount :</label>
        <input asp-for="food.PricePerUnit" class=" form-control" placeholder="Enter Amount" />
        <span asp-validation-for="food.PricePerUnit" class="text-danger"></span>
    </div>

    

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-dark btn-lg" style="background-color: #28a745; border-color: #28a745;">Done</button>
    </div>


</form>