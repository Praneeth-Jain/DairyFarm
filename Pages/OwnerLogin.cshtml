@page
@model DairyFarm.Pages.OwnerLoginModel
@{
}

<div>
    <h1>
        Owner Login
</h1>
</div>

<form method="post">
    <div class="form-group mb-3">
        <lable class="control-lable" asp-for="ownerlogin.OwnerEmail">Owner Email</lable>
        <input class="form-control" asp-for="ownerlogin.OwnerEmail" placeholder="Enter your Email" />
        <span asp-validation-for="ownerlogin.OwnerEmail" class="bg-danger text-light"></span>
    </div>

    <div class="form-group mb-3">
        <lable class="control-lable" asp-for="ownerlogin.OwnerPassword">Owner Password</lable>
        <input type="password" class="form-control" asp-for="ownerlogin.OwnerPassword" placeholder="Enter your Password" />
        <span asp-validation-for="ownerlogin.OwnerPassword" class="bg-danger text-light"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-dark btn-lg" style="background-color: #28a745; border-color: #28a745;">Login</button>
        <a class="btn btn-outline-secondary btn-lg" asp-page="/OwnerRegister" style="border-color: #6c757d;">Register</a>
    </div>
</form>
