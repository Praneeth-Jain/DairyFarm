@page
@model DairyFarm.Pages.Admin.loginModel
@{
}


<div class="container login-body">
    <h1>
        Admin Login
    </h1>   

    <form method="post">
        <div class="form-group mb-3">
            <lable class="control-lable" asp-for="Username">Name</lable>
            <input class="form-control" asp-for="Username" placeholder="Enter your Admin" />
            <span asp-validation-for="Username" class="bg-danger text-light"></span>
        </div>

        <div class="form-group mb-3">
            <lable class="control-lable" asp-for="Password">Owner Password</lable>
            <input type="password" class="form-control" asp-for="Password" placeholder="Enter your Password" />
            <span asp-validation-for="Password" class="bg-danger text-light"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark btn-lg" style="background-color: #28a745; border-color: #28a745;">Login</button>
        </div>
    </form>
</div>
